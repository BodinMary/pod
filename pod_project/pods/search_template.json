{
  "template": "pod",
  "order": 1,

  "settings": {
    "number_of_shards": 2,
    "number_of_replicas": 0,
   "analysis": {
      "filter": {
        "french_elision": {
          "type":         "elision",
          "articles_case": true,
          "articles": [
              "l", "m", "t", "qu", "n", "s",
              "j", "d", "c", "jusqu", "quoiqu",
              "lorsqu", "puisqu"
            ]
        },
        "french_stop": {
          "type":       "stop",
          "stopwords":  "_french_" 
        },
        "french_keywords": {
          "type":       "keyword_marker",
          "keywords":   ["Exemple"] 
        },
        "french_stemmer": {
          "type":       "stemmer",
          "language":   "light_french"
        }
      },
      "tokenizer": {
        "my_tokenizer": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 3,
          "token_chars": [
            "letter"
          ]
        }
      },
      "analyzer": {
        "french": {
          "type"     :    "custom",
          "tokenizer": "my_tokenizer",
          "filter": [
            "french_elision",
            "lowercase",
            "french_stop",
            "french_keywords",
            "french_stemmer"
          ]
        }
      }
    }
  },
  "mappings": {
    "pod": {
      "properties": {
        "id": {
          "type":"long"
        },
        "title": {
          "type":"text",
          "analyzer" : "french",
          "term_vector": "with_positions_offsets"
        },
        "owner": {
          "type":"keyword"
        },
        "owner_full_name": {
          "type":"text",
          "analyzer" : "french",
          "term_vector": "with_positions_offsets"
        },
        "date_added": {
          "type":"date"
        },
        "date_evt" : {
          "type": "date"
        },
        "description": {
          "type":"text",
          "analyzer" : "french",
          "term_vector": "with_positions_offsets"
        },
        "thumbnail": {
          "type":"keyword",
          "index" : false
        },
        "duration": {
          "type":"integer"
        },
        "tags": {
          "properties": {
            "name": {
              "type":"text",
              "analyzer" : "french",
              "term_vector": "with_positions_offsets",
              "fields": {
